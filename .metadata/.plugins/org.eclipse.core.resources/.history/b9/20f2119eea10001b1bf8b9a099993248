package controlador;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;

import modelo.Cadastro;


public class controleCadastro {


	static FileWriter fileWriter;
	static FileReader fileReader;
	static BufferedReader leitor;
	static BufferedWriter escrever;
	//File file;
	
	Cadastro cadastro;
	private ArrayList<Cadastro> cadastros;
	
	
	public static void main(String[] args) {
		File arquivo = new File("src/arquivo.txt");
		Cadastro cadastro = new Cadastro("r", "d", "d", "d");
		String nome = "Rafael";
		String linhaDados;
		
		try {
			//arquivo.createNewFile();
			
			
			
			fileWriter = new FileWriter(arquivo);
			escrever = new BufferedWriter(fileWriter);
			linhaDados = cadastro.getLogin() + "," + cadastro.getSenha() + "," + cadastro.getNome() + "," + cadastro.getSexo();			
			escrever.write(linhaDados);
			
			escrever.close();
			fileWriter.close();
			
			fileReader = new FileReader(arquivo);
			leitor = new BufferedReader(fileReader);
			String linha = leitor.readLine();
			
			while(linha != null) {
				System.out.println(linha);
				linha = leitor.readLine();
			}
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
	
	
	public controleCadastro(Cadastro cadastro) {
		this.cadastro = cadastro;
		
	}
	
	
	public void cadastrarCliente(Cadastro... cadastros) {
		if(cadastros != null) {
			for(Cadastro c : cadastros) {
			  this.cadastros.add(c);
			}
		}
	}
	
}
