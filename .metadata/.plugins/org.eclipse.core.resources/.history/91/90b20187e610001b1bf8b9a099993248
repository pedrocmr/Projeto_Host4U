package controlador;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;

import modelo.Cadastro;


public class controleCadastro {

	public static void main(String[] args) {
		File arquivo = new File("src/arquivo.txt");
		try {
			arquivo.createNewFile();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
	FileWriter fileWriter;
	FileReader fileReader;
	BufferedReader leitor;
	BufferedWriter escrever;
	//File file;
	
	Cadastro cadastro;
	private ArrayList<Cadastro> cadastros;
	
	
	
	public controleCadastro(Cadastro cadastro) {
		this.cadastro = cadastro;
	}
	
	
	public void cadastrarCliente(Cadastro... cadastros) {
		if(cadastros != null) {
			for(Cadastro c : cadastros) {
			  this.cadastros.add(c);
			}
		}
	}
	
}
